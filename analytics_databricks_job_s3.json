{
  "name": "amazon-sales-delta-ingest-s3",
  "new_cluster": {
    "spark_version": "13.3.x-scala2.12",
    "node_type_id": "i3.xlarge",
    "num_workers": 2,
    "aws_attributes": {
      "availability": "SPOT_WITH_FALLBACK",
      "ebs_volume_count": 0
    }
  },
  "notebook_task": {
    "notebook_path": "/Repos/<your-user>/Amazon-Raw-Sales-Data-Analysis/analytics/databricks_batch_delta_ingest_s3"
  },
  "max_retries": 1,
  "timeout_seconds": 3600,
  "schedule": {
    "quartz_cron_expression": "0 0 2 * * ?",
    "timezone_id": "UTC"
  },
  "email_notifications": {
    "on_failure": ["you@company.com"]
  }
}